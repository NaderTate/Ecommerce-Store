// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Product {
  id          String   @id @default(auto()) @map("_id") @db.ObjectId
  Title       String
  Price       Float
  Description String   @default("")
  Images      Json[]   @default([])
  mainImg     String
  Categories  String[] @default([])
  Colors      String[] @default([])
  Reviews     Json[]
  Properties  Json
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Category {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  label      String
  value      Int
  Image      String
  Properties Json[]
  Parent     String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}

model Admin {
  id    String @id @default(auto()) @map("_id") @db.ObjectId
  email String
  name  String
  image String
}

model User {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  UserId    String    @unique
  Name      String
  Email     String
  Phone     Int
  BirthDate String
  Gender    String
  Image     String
  Cart      Json[]
  Orders    Order[]
  WhishList Json[]
  Address   Address[]
  createdAt DateTime  @default(now())
  updatedAt DateTime  @updatedAt
}
model Order {
  id            String   @id @default(auto()) @map("_id") @db.ObjectId
  UserId        String   @unique
  User          User     @relation(fields: [UserId], references: [UserId])
  PaymentMethod String
  OrderTotal    Float
  PlacedOn      String
  CompletedOn   String
  Orders        Json[]
  IsComplete    Boolean
  Address       Json?
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
}

model Address {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  UserId     String   @unique
  User       User     @relation(fields: [UserId], references: [UserId])
  Country    String
  City       String
  Street     String
  Building   String
  PostalCode Int
  Landmark   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
}
